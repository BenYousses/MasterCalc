<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragmentes.Circle_Fragmets.Circle_Fragmet">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/circle_tabLyout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:contentDescription="tablayout"
        android:outlineAmbientShadowColor="@color/purple"
        android:outlineSpotShadowColor="@color/purple"
        app:tabIndicatorColor="@color/purple"
        app:tabRippleColor="@color/purple"
        app:tabSelectedTextColor="@color/purple"
        app:tabTextColor="@color/main_blue">


    </com.google.android.material.tabs.TabLayout>


    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/circle_ViwPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/circle_tabLyout" />



</RelativeLayout>