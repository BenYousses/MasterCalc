<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragmentes.Triangle_Fragments.Triangle_circumference_Fragment">

    <androidx.cardview.widget.CardView
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="9dp"
            >

            <TextView
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rule_title_backround"
                android:gravity="center"
                android:layout_marginTop="6dp"
                android:layout_gravity="center"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:text="قاعدة مهمة" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@string/triangle_circumference_rule"
                android:padding="9dp"
                android:textColor="@color/black"
                android:background="@drawable/backround_input"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="100dp"
        >


        <EditText
            android:id="@+id/triangle_rib1"
            android:layout_width="121dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:background="@drawable/backround_input"
            android:ems="10"
            android:hint="الضلع 1"
            android:inputType="number"
            android:paddingEnd="10dp" />

        <EditText
            android:id="@+id/triangle_rib2"
            android:layout_width="121dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:background="@drawable/backround_input"
            android:ems="10"
            android:hint="الضلع 2"
            android:inputType="number"
            android:paddingEnd="10dp" />

        <EditText
            android:id="@+id/triangle_rib3"
            android:layout_width="121dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:background="@drawable/backround_input"
            android:ems="10"
            android:hint="الضلع 3"
            android:inputType="number"
            android:paddingEnd="10dp" />

    </LinearLayout>

    <TextView
        android:layout_width="191dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:text="النتيجة :"
        android:textColor="@color/black"
        android:textSize="25dp" />



        <TextView
            android:id="@+id/triangle_result_circumference"
            android:layout_width="189dp"
            android:layout_height="60dp"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/rule_title_backround"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="25dp" />



    <Button
        android:id="@+id/triangle_btn_calculate_circumference"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="أحسب"
        android:layout_gravity="center"
        android:background="@drawable/btns_backround"
        android:layout_marginTop="150dp"/>

</LinearLayout>