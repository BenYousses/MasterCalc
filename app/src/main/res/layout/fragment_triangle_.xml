<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragmentes.Triangle_Fragments.Triangle_Fragment">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/triangle_tabLyout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:outlineSpotShadowColor="@color/purple"
        app:tabTextColor="@color/main_blue"
        app:tabIndicatorColor="@color/purple"
        app:tabSelectedTextColor="@color/purple"
        app:tabRippleColor="@color/purple"
        android:outlineAmbientShadowColor="@color/purple"

        >


    </com.google.android.material.tabs.TabLayout>


    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/triangle_ViwPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/triangle_tabLyout"/>

</RelativeLayout>